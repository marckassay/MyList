{
  "name": "react-typescript",
  "version": "1.0.0",
  "private": true,
  "description": "React TypeScript on Replit, using Vite bundler",
  "main": "index.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "npx jest",
    "lint": "npx eslint . --fix",
    "lint:check": "npx eslint . --fix-dry-run",
    "lint:print": "npx eslint --print-config .eslintrc.json > tmp/eslintrc.conf.json",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "format:clear": "rm ./node_modules/.cache/prettier/.prettier-cache",
    "tidy": "npm run tidy:check -- --write",
    "tidy:check": "npx prettier-eslint \"./**/*.@(js|jsx|ts|tsx)\"  --config .prettierrc --list-different",
    "prepare": "husky install",
    "pre-commit": "npm test && npx pretty-quick --staged && npm run tidy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "nanoid": "^3.3.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@swc/core": "^1.2.218",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/react": "^18.0.7",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-legacy": "^1.8.1",
    "@vitejs/plugin-react": "^1.3.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.7",
    "camelcase": "^6.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-watch-typeahead": "^2.0.0",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^6.0.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.6.3",
    "vite": "^2.9.5"
  }
}
